<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ddd">

    <include
        layout="@layout/toolbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>


    <ScrollView
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_below="@+id/toolbar"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:background="#ffbbbbbb">



            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cardview"
                card_view:cardElevation="10dp"
                android:layout_width="match_parent"
                card_view:cardCornerRadius="5dp"
                android:layout_height="wrap_content"
                android:foreground="?android:attr/selectableItemBackground">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <!-- graphite image view-->
                        <ImageView
                            android:id="@+id/peaceOfArtImg"
                            android:layout_width="fill_parent"
                            android:layout_height="290dp"
                            android:background="@drawable/background1"
                            android:scaleType="fitStart"
                            android:adjustViewBounds="true"
                            android:layout_centerHorizontal="true" />

                        <!-- image title text view-->
                        <TextView
                            android:id="@+id/imgTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/customViewLinear"
                            android:textSize="25sp"
                            android:paddingLeft="20dp"
                            android:paddingTop="10dp"
                            android:paddingRight="20dp"
                            android:text="@string/imgTitle"
                            android:textColor="#800080"
                            android:textStyle="bold" />

                        <!-- author textview-->
                        <TextView
                            android:id="@+id/author"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/author"
                            android:textSize="13sp"
                            android:textColor="#000"
                            android:layout_alignBaseline="@+id/hashTagId"
                            android:layout_alignBottom="@+id/hashTagId"
                            android:layout_alignLeft="@+id/createDate"
                            android:layout_alignStart="@+id/createDate" />


                        <!-- likes number-->
                        <TextView
                            android:id="@+id/likes_countTextView"
                            android:text="@string/likes_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/peaceOfArtImg"
                            android:textSize="12sp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="10dp"
                            android:textColor="#000" />

                        <!-- like text-->
                        <TextView
                            android:id="@+id/likes"
                            android:text="@string/likes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/peaceOfArtImg"
                            android:layout_toRightOf="@+id/likes_countTextView"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="8dp"
                            android:textSize="12sp"
                            android:textColor="#000" />

                        <!-- comments number-->
                        <TextView
                            android:id="@+id/comments_numberTextView"
                            android:text="@string/comments_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/peaceOfArtImg"
                            android:textSize="12sp"
                            android:layout_marginTop="10dp"
                            android:layout_toEndOf="@+id/likes"
                            android:layout_marginLeft="15dp"
                            android:textColor="#000" />

                        <!-- comments text-->
                        <TextView
                            android:id="@+id/commentsTextViw"
                            android:text="@string/comments"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/comments_numberTextView"
                            android:layout_toRightOf="@+id/comments_numberTextView"
                            android:layout_toEndOf="@+id/comments_numberTextView"
                            android:layout_marginLeft="8dp"
                            android:textSize="12sp"
                            android:textColor="#000" />

                        <!-- upload time text view-->
                        <TextView
                            android:id="@+id/createDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/createDate"
                            android:textIsSelectable="false"
                            android:textSize="13sp"
                            android:textColor="#000"
                            android:layout_above="@+id/customViewLinear"
                            android:layout_alignParentRight="false"
                            android:layout_alignParentEnd="true" />

                        <!-- line custom view-->
                        <LinearLayout
                            android:id="@+id/customViewLinear"
                            android:paddingLeft="50dp"
                            android:paddingRight="50dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:divider="@drawable/abc_list_divider_mtrl_alpha"
                            android:layout_below="@+id/likes"
                            android:layout_centerHorizontal="true">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:padding="20dp"
                                android:background="#dddddd"
                                android:layout_below="@+id/likes"
                                android:layout_alignParentStart="true"
                                android:layout_marginTop="10dp" />

                        </LinearLayout>


                        <TextView
                            android:id="@+id/hashTagId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/hashTag"
                            android:textSize="17sp"
                            android:layout_alignStart="@+id/little_description"
                            android:layout_marginBottom="5dp"
                            android:layout_below="@+id/imgTitle"
                            android:layout_marginLeft="20dp"
                            android:textColor="#000" />

                        <TextView
                            android:id="@+id/little_description"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="@string/little_description"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:layout_below="@id/hashTagId"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"
                            android:textColor="#000"
                            android:gravity="bottom"
                            android:typeface="serif" />

                    </RelativeLayout>


            </android.support.v7.widget.CardView>


        </ScrollView>
    <!-- like imageView-->
    <ImageView
        android:id="@+id/like_icon"
        android:layout_width="28dp"
        android:src="@drawable/like_icon"
        android:layout_height="28dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/scrollView"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="25dp" />

    <!-- like imageView text-->
    <TextView
        android:id="@+id/like_Text_View"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="like"
        android:textSize="17sp"
        android:layout_below="@+id/scrollView"
        android:layout_marginTop="11dp"
        android:layout_toRightOf="@+id/like_icon"
        android:layout_marginLeft="4dp"
        android:textColor="#000" />

    <ImageView
        android:id="@+id/comments_icon"
        android:layout_width="28dp"
        android:src="@drawable/comments_icon"
        android:layout_height="28dp"
        android:layout_below="@+id/scrollView"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/like_Text_View"
        android:layout_marginLeft="20dp" />

    <TextView
        android:id="@+id/comments_text_view_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="comments"
        android:textSize="17sp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/scrollView"
        android:layout_toRightOf="@+id/comments_icon"
        android:layout_marginLeft="4dp"
        android:textColor="#000" />

    <ImageView
        android:id="@+id/share_icon"
        android:layout_width="28dp"
        android:src="@drawable/share_icon"
        android:layout_height="28dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/scrollView"
        android:layout_toEndOf="@+id/comments_text_view_id"
        android:layout_marginLeft="20dp" />

    <TextView
        android:id="@+id/share_text_view_id"
        android:layout_width="wrap_content"
        android:layout_below="@+id/scrollView"
        android:layout_height="wrap_content"
        android:text="@string/share_text_view_id"
        android:textSize="17sp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/share_icon"
        android:layout_marginLeft="4dp"
        android:textColor="#000" />

</RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:layout_gravity="start"
        app:headerLayout="@layout/header_layout"
        app:menu="@menu/drawer"
        />

</android.support.v4.widget.DrawerLayout>
