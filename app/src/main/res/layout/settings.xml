<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/redStyleImageView"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:background="@drawable/red_style"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/purpleStyleIamgeView"
        android:layout_alignStart="@+id/purpleStyleIamgeView"
        android:layout_marginTop="24dp" />

    <ImageView
        android:id="@+id/purpleStyleIamgeView"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:background="@drawable/purple_style"
        android:layout_below="@+id/redStyleImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

</RelativeLayout>